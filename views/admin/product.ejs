<%- include("../includes/head.ejs") %>
<body>
    <%- include("../includes/navigation.ejs") %> 
</header>
		<main class="main">
            <% if(products.length!==0) {%>
            <div class="grid">
                <% products.forEach(product => { %>
                    <div class="card" data-id=<%= product._id %> >
                        <header class="card__header">
                            <h3 class="product__title"><%= product.title %></h3>
                        </header>
                            <div class="card__image">
                                <img src=<%= product.img_URL %>  alt="book">
                            </div>
                            <div class="card__content">
                                <h4 class="product__price">$<%= product.price %> </h4>
                                <p class="product__describtion"><%= product.description %> </p>
                            </div>
                            <div class="card__action">
                                <a href=<%=`/admin/edit-product/${product._id}`  %>  class="btn primary" data-id=<%= product._id %>  >Edit product</a>
                                <button class="btn secondary" data-id=<%= product._id %>>Delete product</button> 
                            </div>
                    </div>
                <% }); %>
            </div>
            <%} else {%>
                <h2>no product here</h2>
                <% }%>
		</main>
        <div id="modal-container">
            <div class="overlay" id="modal-overlay">
                <div id="confirm-delete" class="modal">
                    <p>Are you shore you want to delete this product?</p>
                    <div>
                        <button id="delete" class="primary">Delete</button>
                        <button id="cancel" class="secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <script src='/js/admin-products.js'></script>
<%- include("../includes/end.ejs") %> 