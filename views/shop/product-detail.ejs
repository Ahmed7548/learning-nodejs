<%- include("../includes/head.ejs") %>
<body>
    <%- include("../includes/navigation.ejs") %> 
</header>
    <main class="main main__product_detail">
        <div class="product__detail__left">
            <div class="img__container">
                <img <%= (() => {
                    try {
                        const _url = new URL(product.img_URL)
                        return `src=${_url}`
                    } catch{
                        return  
                    }}
                )() %>  alt="book">
            </div>
            <h3 class="product__name">
                <%= product.title %> 
            </h3>
        </div> 
        <div class="product__detail__right">
            <p class="product__description">
              <%= product.description %> 
            </p>
            <button type="button" class="primary" id="add-to-cart" data-id=<%= product._id%>>add to cart</button>
        </div>
    </main>
        <script src="/js/product-detail-logic.js"></script>
    <%- include("../includes/end.ejs") %> 